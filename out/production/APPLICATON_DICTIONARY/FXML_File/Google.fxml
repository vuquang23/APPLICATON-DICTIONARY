<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>


<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #F0FFFF;"
            xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Controller.GoogleController">
   <children>
      <ImageView fitHeight="95.0" fitWidth="289.0" layoutX="209.0" layoutY="14.0" opacity="0.4" pickOnBounds="true"
                 preserveRatio="true">
         <image>
            <Image url="@../icon/google_1.jpg"/>
         </image>
      </ImageView>
      <TextField fx:id="English" alignment="TOP_LEFT" layoutX="50.0" layoutY="123.0" onKeyReleased="#typing"
                 prefHeight="89.0" prefWidth="486.0" promptText="English..."/>
      <TextField fx:id="Vietnamese" alignment="TOP_LEFT" layoutX="50.0" layoutY="233.0" prefHeight="89.0"
                 prefWidth="486.0" promptText="Vietnamese..."/>
      <Button fx:id="eListen" layoutX="551.0" layoutY="153.0" mnemonicParsing="false" onAction="#listen"
              prefHeight="29.0" prefWidth="23.0">
         <graphic>
            <ImageView fitHeight="19.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../icon/icons8-foreign-language-sound-50.png"/>
               </image>
            </ImageView>
         </graphic>
      </Button>
      <Button fx:id="vListen" layoutX="552.0" layoutY="265.0" mnemonicParsing="false" onAction="#listen"
              prefHeight="26.0" prefWidth="31.0">
         <graphic>
            <ImageView fitHeight="19.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../icon/icons8-voice-50.png"/>
               </image>
            </ImageView>
         </graphic>
      </Button>
   </children>
</AnchorPane>
