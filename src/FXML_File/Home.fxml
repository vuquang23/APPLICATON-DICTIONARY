<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.HomeController">
    <children>
        <AnchorPane prefHeight="400.0" prefWidth="313.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                    AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <ListView fx:id="searchList" layoutX="14.0" layoutY="48.0" onMouseClicked="#selectWordList"
                          prefHeight="338.0" prefWidth="268.0"/>
                <TextField fx:id="inputData" layoutX="14.0" layoutY="14.0" onKeyReleased="#startSearch"
                           prefHeight="26.0" prefWidth="209.0" promptText="Search..."/>
                <Button fx:id="searchButton" layoutX="235.0" layoutY="14.0" mnemonicParsing="false"
                        onAction="#findMeaning" prefHeight="26.0" prefWidth="46.0">
                    <graphic>
                        <ImageView fitHeight="17.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../icon/icons8-search-50.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
                <AnchorPane layoutX="300.0" layoutY="1.0" prefHeight="400.0" prefWidth="298.0"
                            AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="300.0" AnchorPane.rightAnchor="0.0"
                            AnchorPane.topAnchor="0.0">
                    <children>
                        <Label fx:id="showWord" layoutX="14.0" layoutY="21.0" prefHeight="36.0" prefWidth="234.0">
                            <font>
                                <Font name="Ubuntu" size="31.0"/>
                            </font>
                        </Label>
                        <Label fx:id="showMeaning" alignment="TOP_LEFT" layoutX="10.0" layoutY="69.0" prefHeight="317.0"
                               prefWidth="278.0" textAlignment="JUSTIFY" wrapText="true"/>
                        <Button fx:id="speakerButton" layoutX="253.0" layoutY="26.0" mnemonicParsing="false"
                                onAction="#speaker" prefHeight="26.0" prefWidth="27.0">
                            <graphic>
                                <ImageView fitHeight="18.0" fitWidth="46.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@../icon/icons8-voice-50.png"/>
                                    </image>
                                </ImageView>
                            </graphic>
                        </Button>
                    </children>
                </AnchorPane>
            </children>
        </AnchorPane>
   </children>
</AnchorPane>
