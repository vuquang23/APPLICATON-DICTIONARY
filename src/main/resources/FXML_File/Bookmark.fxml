<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.web.WebView?>


<AnchorPane prefHeight="450.0" prefWidth="750.0" style="-fx-background-color: #FFFFFF;"
            xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Controller.BookmarkController">
   <children>
      <ListView fx:id="bookmarkList" layoutX="16.0" layoutY="21.0" onMouseClicked="#selectWordList" prefHeight="406.0"
                prefWidth="311.0" AnchorPane.bottomAnchor="23.0" AnchorPane.leftAnchor="16.0"
                AnchorPane.rightAnchor="423.0" AnchorPane.topAnchor="21.0"/>
      <WebView fx:id="webView" layoutX="366.0" layoutY="47.0" prefHeight="403.0" prefWidth="371.0"
               AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="366.0" AnchorPane.rightAnchor="13.0"
               AnchorPane.topAnchor="47.0"/>
      <Button fx:id="speakerButton" layoutX="363.0" layoutY="10.0" minHeight="-Infinity" minWidth="-Infinity"
              mnemonicParsing="false" onAction="#mouseEvent" prefHeight="22.0" prefWidth="24.0"
              AnchorPane.topAnchor="10.0">
         <graphic>
            <ImageView fitHeight="22.0" fitWidth="22.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../icon/icons8-speaker-24.png"/>
               </image>
            </ImageView>
         </graphic>
      </Button>
      <Button fx:id="removeButton" layoutX="395.0" layoutY="10.0" minHeight="-Infinity" minWidth="-Infinity"
              mnemonicParsing="false" onAction="#mouseEvent" prefHeight="22.0" prefWidth="24.0"
              AnchorPane.topAnchor="10.0">
         <graphic>
            <ImageView fitHeight="18.0" fitWidth="18.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../icon/icons8-minus-24.png"/>
               </image>
            </ImageView>
         </graphic>
      </Button>
   </children>
</AnchorPane>
